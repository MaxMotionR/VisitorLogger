<Alloy>
    <Window id="container" top="20" layout="absolute" onClose="cleanUp">
        <ScrollView>
            <View layout="vertical">
                <Label bottom="10" id="title">Visitors Book</Label>
                <Label bottom="10" id="dateField"/>
                <TextField class="formField" id="nameField" hintText="Name"></TextField>
                <TextField class="formField" id="orgn" hintText="Organisation"></TextField>
                <TextField class="formField" id="car" hintText="Car Registration"></TextField>
                <TextField class="formField" id="visiting" hintText="Visiting"></TextField>
                <Label color="#c5c5c7" class="formField" id="arrivalTime" text="  Time In"></Label>
                <Label color="#c5c5c7" class="formField" id="departureTime" text="  Time Out"></Label>
                <ImageView top="0" height="0" id="photoImage" onClick="onAdd" image="/images/myimage.png" />
                <Button top="10" class="button" id="photoButton" onClick="onAdd">Photo</Button>
                <ImageView top="0" height="0" id="signatureImage" image="/images/myimage.png" />
                <Button class="button" id="signature">Signature</Button>
                <Button class="button" id="btn">Save</Button>
            </View>
            <View visible="false" layout="vertical" id="pickerView" height="276" bottom="-276" width="320" zIndex="99" backgroundColor="white" class="pickerView">
                <ButtonBar id="bb1" platform="ios" backgroundColor="#369" top="5" height="25" width="200">
                    <!-- The Labels tag sets the ButtonBar.labels property -->
                    <Labels>
                        <!-- Specify text with node text or the title attribute. -->
                        <!-- Can also specify the enabled, image and width attributes. -->
                        <Label>Cancel</Label>
                        <Label>Done</Label>
                    </Labels>
                    <!-- Place additional views for the ButtonBar here. -->
                </ButtonBar>
                <Picker id="picker"
                onChange="report"
                type="Ti.UI.PICKER_TYPE_TIME"></Picker>
            </View>
        </ScrollView>
        <AlertDialog id="permissionDeniedDialog" title="Oops..." message="Unable to access camera/gallery, please check your app's privacy settings and try again." cancel="1" />
    </Window>
</Alloy>