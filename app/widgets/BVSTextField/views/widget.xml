<Alloy>
    <TextField id="txt" class="formField">
        <!-- Sets the keyboardToolbar property -->
        <KeyboardToolbar>
            <Toolbar>
                <Items>
                    <Button id="cancel" onClick="cancel" systemButton="Ti.UI.iPhone.SystemButton.CANCEL" />
                    <FlexSpace/>
                    <Button visible="false" id="back" style="Ti.UI.iPhone.SystemButtonStyle.DONE">Back</Button>
                    <FlexSpace/>
                    <Button id="done" style="Ti.UI.iPhone.SystemButtonStyle.DONE">Next</Button>
                </Items>
            </Toolbar>
        </KeyboardToolbar>
    </TextField>
</Alloy>